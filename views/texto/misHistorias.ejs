<div style="display: flex; margin-bottom: 3em;">
  <a href="/ia/eleccionModo" class="btn btn-success" style="margin-left: auto;">INICIAR UN NUEVO JUEGO</a>
</div>


<div class="container">

  <h2><%- tituloForm %></h2>
  <hr>

  <table class="table table-hover table-bordered text-center">
    <thead class="cabeceraTabla">
      <tr class="categoriasTabla">
        <th scope="col">Nombre Personaje</th>
        <th scope="col">Escenario</th>
        <th scope="col">Personaje</th>
        <th scope="col">Ver Historia</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>

    <tbody class="cuerpoTabla">
      <% for ( texto of textos ){ %>
      <tr>
        <td>
          <%- texto.nombreUsuario %>
        </td>
        <td>
          <%- texto.nombreEscenario %>
        </td>
        <td>
          <%- texto.nombrePersonaje %>
        </td>
        <td>
          <a href="/ia/historia/<%- texto.idTextoIA %>">Ver</a>
        </td>
        <td>
          <a href="/ia/historia/delete/<%- texto.idTextoIA %>" style="font-weight: bold; color: red;">Borrar Historia</a>
        </td>
      </tr>
      <% } %>

    </tbody>
  </table>

  <div class="row"></div>

</div>